<cruisecontrol>

    <!-- 
    \name MeshLibApps
    \brief Builds the MeshLib applications.
    -->
    <project.default name="MeshLibApps">

        <!-- Properties -->
        <property name="project.instance_name" value="meshLibApps"/>
        <property name="project.type_src_folder" value="cilabModules"/>
        <property name="project.type_bin_folder" value="library"/>
        <property name="project.source_path" value="${main.toolkit_src_folder}/${project.type_src_folder}/MeshLib/applications"/>
        <property name="project.csn_file" value="${main.toolkit_src_folder}/${project.type_src_folder}/MeshLib/csn${project.name}.py"/>
        <property name="project.ant_target" value="${ant.compile_target}"/>

        <!-- Modificationset: triggers for rebuild -->
        <modificationset>
            <buildstatus logdir="${main.log_folder}/MeshLib"/>
        </modificationset>

    </project.default>

</cruisecontrol>
