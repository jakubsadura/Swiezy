<cruisecontrol>

   <!-- 
   \name CILabMacros
   \brief Builds the CILab macros.
   -->
   <project.default name="CILabMacros">
      
      <!-- Properties -->
      <property name="project.instance_name" value="cilabMacros"/>
      <property name="project.type_src_folder" value="cilabModules"/>
      <property name="project.type_bin_folder" value="library"/>
      <property name="project.bin_folder" value="${main.toolkit_bin_folder}/${project.type_bin_folder}/CilabMacros"/>

      <!-- Modificationset: triggers for rebuild -->
      <modificationset>
         <svn/>
         <buildstatus logdir="${main.log_folder}/ThirdParty"/>
      </modificationset>

   </project.default>

</cruisecontrol>
