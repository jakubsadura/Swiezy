<cruisecontrol>

   <!-- 
   \name GuiBridgeLib
   \brief Builds the GuiBridgeLib library.
   -->
   <project.default name="GuiBridgeLibAll">

      <!-- Properties -->
      <property name="project.instance_name" value="guiBridgeLibAll"/>
      <property name="project.type_src_folder" value="cilabModules"/>
      <property name="project.type_bin_folder" value="library"/>
      <property name="project.source_path" value="${main.toolkit_src_folder}/${project.type_src_folder}/GuiBridgeLib"/>
      <property name="project.csn_file" value="${project.source_path}/build/csn${project.name}.py"/>
      <property name="project.doc_run_folder" value="${project.source_path}/doc"/>
      <property name="project.doc_config_file" value="${project.source_path}/doc/Doxyfile.doxy"/>
      <property name="project.test_exec_name" value="GuiBridgeLibTests"/>
      
      <!-- Modificationset: triggers for rebuild -->
      <modificationset>
         <svn/>
         <buildstatus logdir="${main.log_folder}/ThirdParty"/>
         <buildstatus logdir="${main.log_folder}/CILabMacros"/>
      </modificationset>

   </project.default>

</cruisecontrol>
