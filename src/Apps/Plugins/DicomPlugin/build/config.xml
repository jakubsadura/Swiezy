<cruisecontrol>

   <!-- 
   \name DicomPlugin
   \brief Builds the Dicom plugin.
   -->
   <project.default name="DicomPlugin">

      <!-- Properties -->
      <property name="project.instance_name" value="dicomPlugin"/>
      <property name="project.type_src_folder" value="Apps/Plugins"/>
      <property name="project.type_bin_folder" value="library"/>

      <!-- Modificationset: triggers for rebuild -->
      <modificationset>
         <svn/>
         <buildstatus logdir="${main.log_folder}/ThirdParty"/>
         <buildstatus logdir="${main.log_folder}/BaseLibAll"/>
         <buildstatus logdir="${main.log_folder}/CILabMacros"/>
         <buildstatus logdir="${main.log_folder}/DcmAPI"/>
         <buildstatus logdir="${main.log_folder}/gmCore"/>
      </modificationset>

   </project.default>

</cruisecontrol>
